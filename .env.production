# Production MCP Configuration
# High-performance settings for production deployment

# Core MCP Services
MCP_PORT=8078
MCP_FILE_SERVER_PORT=8079
MCP_DB_SERVER_PORT=8080

# Security Configuration (CHANGE THESE IN PRODUCTION!)
MCP_ENABLE_AUTH=true
MCP_JWT_SECRET=CHANGE-THIS-TO-A-SECURE-SECRET-IN-PRODUCTION
MCP_API_KEY=CHANGE-THIS-TO-A-SECURE-API-KEY-IN-PRODUCTION

# Performance Optimization
MCP_LOG_LEVEL=warn
NODE_ENV=production
MCP_WORKER_THREADS=4
MCP_MAX_CONNECTIONS=1000
MCP_REQUEST_TIMEOUT=30000
MCP_KEEP_ALIVE_TIMEOUT=5000

# File Server Configuration
MCP_MAX_FILE_SIZE=100MB
MCP_UPLOAD_TIMEOUT=60000
MCP_CONCURRENT_UPLOADS=10

# Database Configuration
MCP_DB_POOL_SIZE=20
MCP_DB_CONNECTION_TIMEOUT=10000
MCP_DB_QUERY_TIMEOUT=30000

# Monitoring and Health Checks
MCP_HEALTH_CHECK_INTERVAL=30000
MCP_METRICS_ENABLED=true
MCP_PERFORMANCE_MONITORING=true

# Rate Limiting
MCP_RATE_LIMIT_WINDOW=900000
MCP_RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
MCP_CORS_ORIGIN=https://your-domain.com
MCP_CORS_CREDENTIALS=true

# SSL/TLS (if using HTTPS)
MCP_SSL_ENABLED=false
MCP_SSL_CERT_PATH=/path/to/cert.pem
MCP_SSL_KEY_PATH=/path/to/key.pem