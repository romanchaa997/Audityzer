{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "bin/**/*", "scripts/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "tests/**/*", 
    "templates/**/*",
    "examples/**/*",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.spec.ts",
    "**/*.spec.js"
  ]
}
