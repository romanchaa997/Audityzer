{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Audityzer Configuration",
  "type": "object",
  "required": ["version"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Audityzer version"
    },
    "testing": {
      "type": "object",
      "properties": {
        "mockMode": {
          "type": "boolean",
          "description": "Whether to run tests in mock mode"
        },
        "defaultWallet": {
          "type": "string",
          "enum": ["metamask", "coinbase", "walletconnect", "phantom"],
          "description": "Default wallet to use for testing"
        },
        "defaultChain": {
          "type": "string",
          "enum": ["ethereum", "polygon", "optimism", "arbitrum", "base", "solana"],
          "description": "Default blockchain to use for testing"
        }
      }
    },
    "security": {
      "type": "object",
      "properties": {
        "riskThreshold": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "description": "Risk threshold for security checks"
        },
        "enableFuzzing": {
          "type": "boolean",
          "description": "Whether to enable fuzzing during security tests"
        },
        "vulnerabilityTypes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "reentrancy",
              "overflow",
              "frontrunning",
              "accessControl",
              "oracleManipulation",
              "flashloanAttack",
              "uncheckedReturn",
              "dos",
              "gasOptimization",
              "timestampDependence",
              "weakRandomness",
              "signatureReplay"
            ]
          },
          "description": "Types of vulnerabilities to check for"
        }
      }
    },
    "accountAbstraction": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether to enable account abstraction features"
        },
        "pimlicoMode": {
          "type": "boolean",
          "description": "Whether to use Pimlico for account abstraction"
        },
        "bundlerUrl": {
          "type": "string",
          "description": "URL of the bundler service"
        },
        "addons": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["social-recovery", "session-keys", "gas-sponsoring", "batched-transactions"]
          },
          "description": "Account abstraction addons to enable"
        }
      }
    },
    "reporting": {
      "type": "object",
      "properties": {
        "format": {
          "type": "string",
          "enum": ["html", "json", "md", "sarif"],
          "description": "Report format"
        },
        "outputDir": {
          "type": "string",
          "description": "Directory to output reports to"
        },
        "uploadToDashboard": {
          "type": "boolean",
          "description": "Whether to upload reports to the dashboard"
        }
      }
    }
  }
}