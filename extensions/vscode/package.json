{
  "name": "web3fuzzforge-vscode",
  "displayName": "Web3FuzzForge",
  "description": "VS Code extension for Web3FuzzForge test template generation and helpers",
  "version": "0.1.0",
  "publisher": "web3fuzzforge",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Testing",
    "Snippets"
  ],
  "activationEvents": [
    "onCommand:web3fuzzforge.generateTemplate",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "web3fuzzforge.generateTemplate",
        "title": "Web3FuzzForge: Generate Test Template"
      },
      {
        "command": "web3fuzzforge.showHelp",
        "title": "Web3FuzzForge: Show Help"
      }
    ],
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/javascript.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/typescript.json"
      }
    ],
    "configuration": {
      "title": "Web3FuzzForge",
      "properties": {
        "web3fuzzforge.defaultWallet": {
          "type": "string",
          "default": "metamask",
          "enum": ["metamask", "coinbase", "phantom", "rabby", "walletconnect"],
          "enumDescriptions": [
            "MetaMask wallet",
            "Coinbase wallet",
            "Phantom wallet",
            "Rabby wallet",
            "WalletConnect"
          ],
          "description": "Default wallet to use for test generation"
        },
        "web3fuzzforge.defaultDappUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Default URL of the dApp to test"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.60.0",
    "eslint": "^8.56.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  }
} 