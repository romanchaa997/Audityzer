# API Keys
OPENAI_API_KEY=sk-your-api-key-here

# Test Environment Configuration
MOCK_MODE=true                           # Set to true to use mock blockchain
TARGET_URL=http://localhost:3000         # Your dApp URL for testing
NODE_ENV=development                     # development, test, or production

# Wallet Configuration
DEFAULT_WALLET_ADDRESS=0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266
DEFAULT_CHAIN_ID=0x1                    # Ethereum Mainnet
NETWORK_NAME=mainnet                    # mainnet, ropsten, rinkeby, etc.
RPC_URL=http://localhost:8545          # Your RPC endpoint

# Test Settings
UI_TIMEOUT=5000                        # Timeout for UI interactions (ms)
TEST_TIMEOUT=30000                     # Overall test timeout (ms)
RETRY_COUNT=3                          # Number of test retries on failure
CONCURRENT_TESTS=4                     # Number of concurrent test runs

# Output Configuration
SAVE_TRACE=true                        # Save Playwright trace for debugging
SCREENSHOT_ON_FAILURE=true             # Take screenshots on test failure
REPORT_PATH=./reports                  # Path for test reports
VIDEO_ON_FAILURE=true                  # Record video on test failure

# Browser Settings
HEADLESS=true                          # Run tests in headless mode
BROWSER=chromium                       # chromium, firefox, or webkit
DEVICE_SCALE_FACTOR=1                  # Browser scale factor for screenshots

# Security Settings
SKIP_METAMASK_SETUP=false             # Skip MetaMask setup steps
SECURE_MODE=true                      # Enable additional security checks