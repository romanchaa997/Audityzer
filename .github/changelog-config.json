{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": ["fix", "bug"]
    },
    {
      "title": "## 📝 Documentation",
      "labels": ["documentation"]
    },
    {
      "title": "## 🧪 Tests",
      "labels": ["test"]
    },
    {
      "title": "## 🔧 Maintenance",
      "labels": ["maintenance", "dependencies"]
    }
  ],
  "ignore_labels": [
    "ignore"
  ],
  "sort": "ASC",
  "template": "${{CHANGELOG}}\n\n**Full Changelog**: ${{RELEASE_DIFF}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "empty_template": "No significant changes in this release.",
  "label_extractor": [
    {
      "pattern": "(.*fix.*)",
      "target": "fix",
      "flags": "i",
      "on_property": "title"
    },
    {
      "pattern": "(.*feat.*)",
      "target": "feature",
      "flags": "i",
      "on_property": "title"
    },
    {
      "pattern": "(.*docs.*)",
      "target": "documentation",
      "flags": "i",
      "on_property": "title"
    },
    {
      "pattern": "(.*test.*)",
      "target": "test",
      "flags": "i",
      "on_property": "title"
    },
    {
      "pattern": "(.*chore.*|.*refactor.*)",
      "target": "maintenance",
      "flags": "i",
      "on_property": "title"
    },
    {
      "pattern": "(.*deps.*)",
      "target": "dependencies",
      "flags": "i",
      "on_property": "title"
    }
  ],
  "transformers": [
    {
      "pattern": "(\\(.*\\))",
      "target": ""
    }
  ],
  "max_tags_to_fetch": 200,
  "max_pull_requests": 200,
  "max_back_track_time_days": 365
} 