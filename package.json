
{
  "name": "audityzer",
  "version": "1.0.0",
  "description": "Advanced Security Auditing Platform",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "npm run type-check && vite build",
    "build:prod": "npm run type-check && npm run lint && vite build --mode production",
    "build:preview": "npm run type-check && vite build --mode staging",
    "build:dev": "vite build --mode development",
    "preview": "vite preview --host",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:css": "stylelint \"src/**/*.{css,scss,vue}\" --fix",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:prod": "playwright test --config=playwright.config.prod.js",
    "security:scan": "npm audit --audit-level moderate && snyk test",
    "security:fix": "npm audit fix && snyk wizard",
    "lighthouse:ci": "lhci autorun",
    "lighthouse:local": "lhci autorun --config=lighthouserc-local.js",
    "analyze:bundle": "npm run build:prod && npx vite-bundle-analyzer dist/stats.html",
    "size:check": "bundlesize",
    "perf:audit": "npm run build:prod && npm run lighthouse:local",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:install": "npm run clean && npm install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "axios": "^1.6.2",
    "lodash-es": "^4.17.21",
    "pinia": "^2.1.7",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.1",
    "@rushstack/eslint-patch": "^1.6.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.4",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.16",
    "bundlesize": "^0.18.1",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.2",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "patch-package": "^8.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.69.5",
    "snyk": "^1.1266.0",
    "stylelint": "^16.0.2",
    "stylelint-config-standard-scss": "^12.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "tailwindcss": "^3.3.6",
    "terser": "^5.26.0",
    "typescript": "~5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.0.4",
    "vue-tsc": "^1.8.25"
  },
  "bundlesize": [
    {
      "path": "./dist/assets/js/*.js",
      "maxSize": "250kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/assets/css/*.css",
      "maxSize": "50kb",
      "compression": "gzip"
    }
  ],
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,vue}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
