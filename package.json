{
  "name": "audityzer-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for Audityzer",
  "type": "module",
  "main": "src/mcp/server.js",
  "scripts": {
    "start": "node src/mcp/server.js",
    "dev": "nodemon src/mcp/server.js",
    "mcp:start": "node src/mcp/server.js",
    "mcp:status": "node scripts/mcp-status.js",
    "mcp:stop": "node scripts/mcp-stop.js",
    "mcp:restart": "npm run mcp:stop && npm run mcp:start",
    "lint": "eslint .",
    "test": "jest"
  },
  "keywords": [
    "mcp",
    "security",
    "web3",
    "smart-contracts",
    "auditing"
  ],
  "author": "Audityzer Team",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=9.0.0"
  }
}